<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.javafxdemo.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <!--This is the format of a comment-->
    <!--Note: the order of these items matters as this is the order in which they will
    show up in the GUI-->
    <Label fx:id="welcomeMessage" text="Welcome to a Little JavaFX Example"></Label>

    <!--Added an HBox here so that the two buttons can be side by side-->
    <HBox alignment="CENTER" spacing="20.0" >
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>
        <Button text="Multiply by 10" onAction="#on10ButtonClick"/>
        <Button text="Multiply by 100" onAction="#on100ButtonClick" />
    </HBox>

    <Label fx:id="instruction" text="Enter your age below: "/>
    <TextField fx:id="textFieldValue" maxWidth="50"/>
    <Label fx:id="resultingValue" text="Result is: " />

</VBox>
